<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/scout"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numero_da_partida"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_numero_partida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/edit_hint_quantidade"
                android:inputType="number"

                android:text="@string/edit_hint_quantidade"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numero_do_time"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_numero_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/hint_9219"
                android:inputType="number"
                android:text="@string/hint_9219"
                android:textColor="@color/black"

                android:textColorHint="@color/hint_text" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/autonomo"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_auto_remove_amp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_remove" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_auto_amp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/edit_hint_quantidade"
                android:inputType="number"
                android:text="@string/edit_hint_quantidade"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/button_auto_add_amp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_add" />

        <ImageView
            android:id="@+id/button_auto_remove_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_remove" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speaker"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_auto_speaker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/edit_hint_quantidade"
                android:inputType="number"
                android:text="@string/edit_hint_quantidade"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/button_auto_add_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_add" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/logo_crescendo"
        android:text="@string/community"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/teleoperado"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_teleop_remove_amp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_remove" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_teleop_amp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/edit_hint_quantidade"
                android:inputType="number"
                android:text="@string/edit_hint_quantidade"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/button_teleop_add_amp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_add" />

        <ImageView
            android:id="@+id/button_teleop_remove_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_remove" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speaker"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_teleop_speaker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:hint="@string/edit_hint_quantidade"
                android:inputType="number"
                android:text="@string/edit_hint_quantidade"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/button_teleop_add_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:buttonTint="@color/logo_crescendo"
            android:minHeight="20dp"
            android:text="@string/park"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/checkbox_onStage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:buttonTint="@color/logo_crescendo"
            android:minHeight="20dp"
            android:text="@string/onstage"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_note_trap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:buttonTint="@color/logo_crescendo"
            android:minHeight="20dp"
            android:text="@string/note_in_trap"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/checkbox_harmony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:buttonTint="@color/logo_crescendo"
            android:minHeight="20dp"
            android:text="@string/harmony"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_enviar_dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="@string/enviar_dados"
        android:textColor="@color/black"
        android:textSize="17sp" />

</LinearLayout>